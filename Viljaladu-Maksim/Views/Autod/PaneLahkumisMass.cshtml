@model Viljaladu.Models.Auto


<h2>Pane Autole Väljumismass</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Auto</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.autoNr, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <p>@ViewBag.autonr</p>
            </div>
        </div>

        @Html.HiddenFor(model => model.autoNr)
        @Html.HiddenFor(model => model.sisenemisMass)

        <div class="form-group">
            @Html.LabelFor(model => model.lahkumisMass, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.lahkumisMass, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.lahkumisMass, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Tagasi", "IndexValja")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
